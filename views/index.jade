    script(type="text/html", id="edit-profile")
        div(class="row")
            fieldset
                div(class="row")
                    div(class="input-field col s12")
                        input#inputUserFullname(type='text', name='name', class="validate")
                        label(for="name") Full Name
                div(class="row")
                    div(class="input-field col s12")
                        input#inputUID(type='text', name='uid', class="validate")
                        label(for="uid") UID
