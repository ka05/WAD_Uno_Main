    script(type="text/html", id="login")
        div(class="row", data-bind="template: { name: loginBodyTmpl}")
        div(class="row")
            button(class="btn waves-effect waves-light", data-bind='click:login', style="margin-left:20px") Login
            button(class="btn waves-effect waves-light", data-bind='click:signUp', style="margin-left:20px") Sign Up

    script(type="text/html", id="login-body")
        div(class="row")
            h4(class="center") Login
            br
            div(class="col s12", id="login-body-form")
                div(class="row")
                    div(class="input-field col s12")
                        i(class="material-icons prefix") account_circle
                        input#loginUsername(type='text', name='name', class="validate")
                        label(for="name") Username
                div(class="row")
                    div(class="input-field col s12")
                        i(class="material-icons prefix") vpn_key
                        input#loginPass(type='text', name='name', class="validate")
                        label(for="name") Password
    script(type="text/html", id="signup-body")
        div(class="row" id="signup-body")
            h4(class="center") Sign Up
            br
            div(class="col s12", id="signup-body-form")
                div(class="row form-group")
                    div(class="input-field col s12")
                        input#inputUserEmail(type='email', name='email', class="validate")
                        label(for="email") Email
                        div(class="error-msg")
                div(class="row form-group")
                    div(class="input-field col s12")
                        input#inputUsername(type='text', name='username', class="validate")
                        label(for="username") Username
                        div(class="error-msg")
                div(class="row form-group")
                    div(class="input-field col s12")
                        input#inputUserPassword(type='password', name='password', class="validate")
                        label(for="password") Password
                        div(class="error-msg")
                div(class="row form-group")
                    div(class="input-field col s12")
                        input#inputUserVerifyPassword(type='password', name='confirm-password', class="validate")
                        label(for="confirm-password") Confirm Password
                        div(class="error-msg")


    script(type="text/html", id="main")
        div(id="home-bg")
            div(id="main-btn-cont")
                button(class="btn btn-main" data-bind="click:handleNavigation", data-view-name="login", data-subview-name="login-body") Login
                br
                button(class="btn btn-main" data-bind="click:handleNavigation", data-view-name="login", data-subview-name="signup-body") Sign Up


